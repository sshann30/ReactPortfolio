  .norm-cont {
    position: relative;
    font-size: 26px;
  }
  .norm {
    display: inline-block;
    position: relative;
    text-decoration: none;
    padding: 10px 0;
    color: #f0f0f0;
    width: 15vw;

  }
  .norm-wrapper {
    position: relative;
    display: block;
    padding: 20px 0;
  }
  
  
  .norm:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: #225681;
    transform: scaleX(0);
    transform-origin: bottom left;
    transition: transform 0.3s;
  }
  .norm:hover:after {
    transform: scaleX(1);
  }
  

  .like-cont {
    position: relative;
    font-size: 24px;
  }
  .like {
    display: inline-block;
    position: relative;
    text-decoration: none;
    padding: 10px 0;
    color: black;
  }
  .like-wrapper {
    position: relative;
    display: block;
    padding: 20px 0;
